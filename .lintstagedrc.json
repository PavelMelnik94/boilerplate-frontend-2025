{
  "*.{ts,tsx}": [
    "prettier --write",
    "eslint --fix --cache --no-warn-ignored",
    "bash -c 'npm run type-check'"
  ],
  "*.{css,scss}": [
    "prettier --write",
    "stylelint \"**/*.{css,scss}\" --fix --config .stylelintrc.json --custom-formatter=@csstools/stylelint-formatter-github"
  ],
  "*.{json,md,yml,yaml}": ["prettier --write"]
}
