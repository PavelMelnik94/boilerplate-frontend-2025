{
  "*": ["eslint --fix"],
  "*.{ts,tsx}": [
    "node --eval \"process.exit(process.exitCode || require('child_process').spawnSync('npm', ['run', 'type-check'], {stdio:'inherit'}).status)\""
  ],
  "*.{css,scss}": [
    "prettier --write",
    "stylelint \"**/*.{css,scss}\" --fix --config .stylelintrc.json"
  ]
}
