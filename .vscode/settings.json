{
  // Core Editor Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "editor.suggestOnTriggerCharacters": false,

  // File Management
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",

  // Completely disable auto-imports
  "typescript.suggest.autoImports": false,
  "javascript.suggest.autoImports": false,
  "typescript.suggestionActions.enabled": false,
  "javascript.suggestionActions.enabled": false,

  // Disable all validators except ESLint
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "typescript.validate.enable": true,
  "javascript.validate.enable": false,

  // ESLint Configuration
  "eslint.format.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.run": "onSave",
  "eslint.lintTask.enable": false,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": {
    "cache": true,
    "cacheLocation": ".eslintcache"
  },

  // Code Actions
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Explicitly disable other tools
  "webhint.enable": false,
  "typescript.implementationsCodeLens.enabled": false,
  "typescript.referencesCodeLens.enabled": false,
  "javascript.referencesCodeLens.enabled": false,

  // Disable inlay hints
  "typescript.inlayHints.enable": false,
  "javascript.inlayHints.enable": false,

  // Spell checker words can stay
  "cSpell.words": [
    "addgroup",
    "adduser",
    "bundlesize",
    "healthcheck",
    "INDEXEDDB",
    "mischeck",
    "msapplication",
    "nabla",
    "navbutton",
    "pnpmfile",
    "proptypes",
    "sonarjs",
    "spinbutton",
    "stylelintignore",
    "tryit",
    "VITE",
    "WEBSQL"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.suggest.enabled": true,
  "typescript.surveys.enabled": false
}
