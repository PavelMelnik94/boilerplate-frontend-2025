    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  // Screenshots for app stores and install prompts *ANCHOR
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],

  // Categories that describe your app *ANCHOR
  "categories": ["productivity", "utilities"],

  // Language and text direction *ANCHOR
  "lang": "en",
  "dir": "ltr",

  // Display preferences for the app *ANCHOR
  "display_override": ["standalone", "minimal-ui"],

  // Protocol handlers for the app *ANCHOR
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/compose?to=%s"
    }
  ],

  // Related applications *ANCHOR
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.app",
      "id": "com.example.app"
    }
  ],
  "prefer_related_applications": false
}
