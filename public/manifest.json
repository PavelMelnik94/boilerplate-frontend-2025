{
  // The name of your application as it should appear to users *ANCHOR
  "name": "Vite TypeScript Starter",

  // A shorter version of the name, used when there isn't enough space *ANCHOR
  "short_name": "VTS",

  // Description of what your application does *ANCHOR
  "description": "A modern Vite + TypeScript starter template",

  // The preferred URL to launch when the web app starts *ANCHOR
  "start_url": "/",

  // Display mode determines how the app should look when launched
  // Options: fullscreen, standalone, minimal-ui, browser *ANCHOR
  "display": "standalone",

  // Theme color affects the UI elements of the browser/device *ANCHOR
  "theme_color": "#646CFF",

  // Background color used for the splash screen *ANCHOR
  "background_color": "#ffffff",

  // Preferred orientation of the app *ANCHOR
  // Options: any, natural, landscape, portrait *ANCHOR
  "orientation": "any",

  // Scope defines which pages are part of the PWA experience *ANCHOR
  "scope": "/",

  // Icons for different platforms and sizes *ANCHOR
  "icons": [
    {
      "src": "/icons/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "/icons/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "/icons/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon"
    },
    {
      "src": "/icons/android-icon-36x36.png",
      "sizes": "36x36",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-48x48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/android-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  // Screenshots for app stores and install prompts *ANCHOR
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],

  // Categories that describe your app *ANCHOR
  "categories": ["productivity", "utilities"],

  // Language and text direction *ANCHOR
  "lang": "en",
  "dir": "ltr",

  // Display preferences for the app *ANCHOR
  "display_override": ["standalone", "minimal-ui"],

  // Protocol handlers for the app *ANCHOR
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/compose?to=%s"
    }
  ],

  // Related applications *ANCHOR
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.app",
      "id": "com.example.app"
    }
  ],
  "prefer_related_applications": false
}
