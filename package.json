{
  "name": "vite-typescript-starter",
  "private": false,
  "version": "0.0.12",
  "description": "A starter project for Vite with TypeScript",
  "author": "Pavel Melnik",
  "license": "MIT",
  "homepage": "https://github.com/PavelMelnik94/vite-typescript-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PavelMelnik94/vite-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/PavelMelnik94/vite-typescript-starter/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,md,json}\"",
    "style:fix": "stylelint \"**/*.{css,scss}\" --fix --config .stylelintrc.json --custom-formatter=@csstools/stylelint-formatter-github",
    "style:check": "stylelint \"**/*.{css,scss}\"  --config .stylelintrc.json --custom-formatter=@csstools/stylelint-formatter-github",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "analyze": "vite build --mode analyze",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@csstools/stylelint-formatter-github": "^1.0.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitest/coverage-v8": "^3.0.5",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.4.35",
    "postcss-preset-env": "^10.1.3",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-no-unresolved-module": "^2.3.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.11.0",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "stylelint-use-nesting": "^6.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  },
  "browserslist": [
    "Chrome >= 100",
    "Firefox >= 110",
    "Safari >= 16",
    "iOS >= 16",
    "not IE 11"
  ],
  "keywords": [
    "vite",
    "typescript",
    "starter",
    "template",
    "frontend",
    "web development",
    "javascript",
    "react",
    "esbuild",
    "vitejs",
    "project template",
    "scss",
    "css"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "generatedBy": {
    "tool": "Bolt",
    "assistant": "GitHub Copilot"
  },
  "settings": {
    "polyfills": [
      "Promise",
      "WebAssembly.compile",
      "fetch",
      "Array.prototype.push"
    ],
    "lintAllEsApis": true
  }
}
