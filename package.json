{
  "name": "vite-typescript-starter",
  "private": false,
  "version": "0.0.7",
  "description": "A starter project for Vite with TypeScript",
  "author": "Pavel Melnik",
  "license": "MIT",
  "homepage": "https://github.com/PavelMelnik94/vite-typescript-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PavelMelnik94/vite-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/PavelMelnik94/vite-typescript-starter/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,md,json}\"",
    "style:check": "stylelint \"**/*.css\"",
    "style:fix": "stylelint \"**/*.css\" --fix",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "analyze": "vite build --mode analyze"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitest/coverage-v8": "^3.0.5",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.3.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Safari >= 12",
    "iOS >= 12",
    "not IE 11"
  ],
  "keywords": [
    "vite",
    "typescript",
    "starter",
    "template",
    "frontend",
    "web development",
    "javascript",
    "react",
    "esbuild",
    "vitejs",
    "project template",
    "scss",
    "css"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "generatedBy": {
    "tool": "Bolt",
    "assistant": "GitHub Copilot"
  }
}
