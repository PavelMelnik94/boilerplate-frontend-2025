{
  "name": "vite-typescript-starter",
  "private": false,
  "version": "0.4.18",
  "description": "A starter project for Vite with TypeScript",
  "author": "Pavel Melnik",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/PavelMelnik94/vite-typescript-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PavelMelnik94/vite-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/PavelMelnik94/vite-typescript-starter/issues"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,md,json}\"",
    "style:check": "stylelint \"**/*.{css,scss}\"  --config .stylelintrc.json",
    "style:fix": "stylelint \"**/*.{css,scss}\" --fix --config .stylelintrc.json",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "create:component": "node scripts/create-component.cjs",
    "analyze:code": "node scripts/analyze-codebase.cjs",
    "check:deps": "node scripts/check-dependencies.cjs",
    "clean": "node scripts/clean-project.cjs",
    "lighthouse": "lighthouse http://localhost:3010 --view",
    "check-a11y": "axe http://localhost:3010",
    "bundle-analysis": "vite build --mode analyze",
    "size": "size-limit",
    "check-web-vitals": "web-vitals",
    "setup:vscode": "node scripts/setup-vscode-extensions.cjs",
    "feature-flags": "node scripts/feature-flags.cjs",
    "validate-env": "node scripts/validate-env.cjs",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "check:all": "cross-env npm run lint && npm run style:check && npm run type-check",
    "fix:all": "cross-env npm run lint:fix && npm run style:fix"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.1",
    "@nabla/vite-plugin-eslint": "^2.0.5",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "autoprefixer": "^10.4.20",
    "bundlesize": "^0.18.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.8.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "happy-dom": "^17.0.2",
    "husky": "^9.1.7",
    "lighthouse": "^12.3.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "postcss-preset-env": "^10.1.3",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^5.14.0",
    "size-limit": "^11.1.6",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-declaration-strict-value": "^1.10.7",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.11.0",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "stylelint-use-nesting": "^6.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  },
  "size-limit": [
    {
      "path": "dist/**/*.js",
      "limit": "100 kb"
    }
  ],
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "100 kB"
    }
  ],
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 10 Safari versions",
    "iOS >= 15",
    "> 0.5%",
    "not dead"
  ],
  "keywords": [
    "vite",
    "typescript",
    "starter",
    "template",
    "frontend",
    "web development",
    "javascript",
    "react",
    "esbuild",
    "vitejs",
    "project template",
    "scss",
    "css"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "generatedBy": {
    "tool": "Bolt",
    "assistant": "GitHub Copilot"
  },
  "settings": {
    "polyfills": [
      "Promise",
      "WebAssembly.compile",
      "fetch",
      "Array.prototype.push"
    ],
    "lintAllEsApis": true
  }
}
