{
  "name": "vite-typescript-starter",
  "type": "module",
  "version": "0.7.3",
  "private": false,
  "description": "A starter project for Vite with TypeScript",
  "author": "Pavel Melnik",
  "license": "MIT",
  "homepage": "https://github.com/PavelMelnik94/vite-typescript-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PavelMelnik94/vite-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/PavelMelnik94/vite-typescript-starter/issues"
  },
  "keywords": [
    "vite",
    "typescript",
    "starter",
    "template",
    "frontend",
    "web development",
    "javascript",
    "react",
    "esbuild",
    "vitejs",
    "project template",
    "scss",
    "css"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{css,md,json}\"",
    "style:check": "stylelint \"**/*.{css,scss}\"  --config .stylelintrc.json",
    "style:fix": "stylelint \"**/*.{css,scss}\" --fix --config .stylelintrc.json",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "create:component": "node scripts/create-component.cjs",
    "analyze:code": "node scripts/analyze-codebase.cjs",
    "check:deps": "npx taze",
    "clean": "node scripts/clean-project.cjs",
    "lighthouse": "lighthouse http://localhost:3010 --view",
    "check-a11y": "axe http://localhost:3010",
    "bundle-analysis": "vite build --mode analyze",
    "check-web-vitals": "web-vitals",
    "setup:vscode": "node scripts/setup-vscode-extensions.cjs",
    "feature-flags": "node scripts/feature-flags.cjs",
    "validate-env": "node scripts/validate-env.cjs",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "check:all": "cross-env npm run lint && npm run style:check && npm run type-check",
    "fix:all": "cross-env npm run lint:fix && npm run style:fix"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "crypto-js": "^4.2.0",
    "localforage": "^1.10.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@axe-core/cli": "^4.10.1",
    "@eslint-react/eslint-plugin": "^1.26.2",
    "@nabla/vite-plugin-eslint": "^2.0.5",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "happy-dom": "^17.1.1",
    "husky": "^9.1.7",
    "lighthouse": "^12.3.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.2",
    "postcss-preset-env": "^10.1.4",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "size-limit": "^11.2.0",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-declaration-strict-value": "^1.10.7",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.11.0",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "stylelint-use-nesting": "^6.0.0",
    "typescript": "^5.7.3",
    "unplugin-auto-export": "^1.0.2",
    "unplugin-imagemin": "^0.6.7",
    "vite": "^6.1.0",
    "vite-plugin-compression2": "^1.3.3",
    "vite-plugin-qrcode": "^0.2.4",
    "vite-plugin-stylelint": "^6.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.6",
    "web-vitals": "^4.2.4"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 10 Safari versions",
    "iOS >= 15",
    "> 0.5%",
    "not dead"
  ],
  "generatedBy": {
    "tool": "Bolt",
    "assistant": "GitHub Copilot"
  },
  "settings": {
    "polyfills": [
      "Promise",
      "WebAssembly.compile",
      "fetch",
      "Array.prototype.push"
    ],
    "lintAllEsApis": true
  }
}
